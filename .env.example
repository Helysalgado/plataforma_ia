# =============================================================================
# BioAI Hub - Environment Variables Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!

# =============================================================================
# GENERAL
# =============================================================================
ENVIRONMENT=production
DEBUG=False
ALLOWED_HOSTS=bioai.ccg.unam.mx,www.bioai.ccg.unam.mx

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS settings
CORS_ALLOWED_ORIGINS=https://bioai.ccg.unam.mx,https://www.bioai.ccg.unam.mx
CSRF_TRUSTED_ORIGINS=https://bioai.ccg.unam.mx,https://www.bioai.ccg.unam.mx

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://bioai_user:your-db-password@db:5432/bioai_prod
POSTGRES_DB=bioai_prod
POSTGRES_USER=bioai_user
POSTGRES_PASSWORD=your-db-password-change-this

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@ccg.unam.mx
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=noreply@bioai.ccg.unam.mx
EMAIL_VERIFICATION_URL=https://bioai.ccg.unam.mx/verify-email

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=https://bioai.ccg.unam.mx/api
NEXT_PUBLIC_APP_NAME=BioAI Hub
NEXT_PUBLIC_APP_URL=https://bioai.ccg.unam.mx

# =============================================================================
# STORAGE (Optional - for production S3/MinIO)
# =============================================================================
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-s3-access-key
# AWS_SECRET_ACCESS_KEY=your-s3-secret-key
# AWS_STORAGE_BUCKET_NAME=bioai-media
# AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com
# AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production

# =============================================================================
# REDIS (For caching and Celery - Optional)
# =============================================================================
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/0

# =============================================================================
# BACKUP (Optional)
# =============================================================================
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
# GITHUB_TOKEN=ghp_your_github_personal_access_token
# GITHUB_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# ADMIN
# =============================================================================
DJANGO_SUPERUSER_EMAIL=admin@ccg.unam.mx
DJANGO_SUPERUSER_PASSWORD=change-this-strong-password
DJANGO_SUPERUSER_NAME=Admin CCG

# =============================================================================
# DEPLOYMENT
# =============================================================================
DEPLOY_HOST=bioai.ccg.unam.mx
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/bioai

# =============================================================================
# DOCKER COMPOSE
# =============================================================================
COMPOSE_PROJECT_NAME=bioai
COMPOSE_FILE=docker-compose.prod.yml
